using System;

namespace program
{
    class MainClass
    {
        public static void Main(string[] args)
        {
            Console.Write("n = ");
            int n = Convert.ToInt32(Console.ReadLine());
            int sum = 0;
            for (int i = 1; i <= n; i++)
            {
                sum += i;
            }
            Console.WriteLine($"Сумма первых {n} членов арифметической прогрессии равна {sum}");
        }
    }
}
